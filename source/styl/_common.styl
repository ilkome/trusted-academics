// ===============================================
//	#vars
// ===============================================
//	colors
color-white = #fff
color-maintext = #29272E
color-link = #d2ae50
color-bg-black = #29272e

//	fonts
font-default = arial, sans-serif
font-site = 'MintTypeSynergaProRegular', font-default
font-bold = 'HelveticaNeueCondensedBold', font-default
font-medium = 'HelveticaNeueCyrMedium', font-default
font-roman = 'HelveticaNeueCyrRoman', font-default



// ===============================================
//	#fonts-mixin
// ===============================================
font-main()
	font-size 16px
	color color-maintext
	font-family font-site
	font-weight 400
	-webkit-font-smoothing antialiased

font-link()
	color color-maintext

font-header()
	color color-maintext
	font-family font-bold
	font-size 40px
	text-transform uppercase

font-form()
	color color-maintext
	font-family font-roman
	font-size 16px
	font-size 16px
	line-height 16px


// ===============================================
//	#reset
// ===============================================
*
	margin 0
	padding 0
	border 0
	outline 0



// ===============================================
//	#lists
// ===============================================
ul
	margin 0 0 30px 5px
	li
		margin 0 0 10px 15px
		list-style none
		ul, ol
			margin 15px 0 10px 0

ol
	margin 0 0 15px 0
	li
		margin 0 0 15px 15px
		list-style decimal inside
		ul, ol
			margin 15px 0 10px 0

lino()
	margin 0
	list-style-type none
	


// ===============================================
//	#text
// ===============================================
p
	margin-bottom 20px



// ===============================================
//	#links
// ===============================================
a
	display inline-block
	font-link()
	text-decoration none
	anim()
	&:hover
		color color-link
	&.active
		cursor default 
		tdn()
	&.full
		width 100%

li.is-active
	a 
		cursor default
		tdn()
	
.btn
	display inline-block
	height 60px
	padding 22px 10px 20px 10px
	font-size 15px
	color color-white
	font-family font-medium
	letter-spacing 0.5px
	font-weight 500
	text-transform uppercase
	text-align center
	white-space nowrap

.btn-phone
	@extend .btn
	position relative
	height 60px
	padding 20px 20px 18px 80px
	border 2px solid color-link
	&:after
		content " "
		position absolute 
		left 0px 
		top 0px
		width 57px
		height 57px
		background color-link url("../img/i-phone.png") center center no-repeat

.btn-gold
	@extend .btn
	background color-link
	&:hover
		color color-white
		background alpha(color-link, .7)

.btn-grey
	@extend .btn
	background-color #dfdfe3
	&:hover
		color color-white
		background alpha(#dfdfe3, .7)

.btn-trans
	@extend .btn
	padding 19px 30px
	color color-link
	border 2px solid color-link
	&:hover
		color color-white
		background color-link
	
.btn-black
	@extend .btn
	padding 21px 30px
	background color-bg-black
	&:hover
		color color-white
		background alpha(color-bg-black, .9)
.btn-big
	height auto
	padding 40px 30px
	
.btn200
	width 210px



// ===============================================
//	#headers
// ===============================================
h1, h2, h3, h4, h5, h6
	margin 0 0 20px 0
	font-header()
h1
	font-size 40px
h2
	font-size 36px
h3
	font-size 28px
h4
	font-size 16px



// ===============================================
//	#forms
// ===============================================
label, input, button, select, option, textarea
	font-form()



// ===============================================
//	#select
// ===============================================
select
	width auto
	margin-bottom 10px
	padding 18px 20px 17px 20px
	background #fff
	border 2px solid #29272e
	&.full
		width 100%



// ===============================================
//	#inputs
// ===============================================
input[type="text"]
input[type="password"]
input[type="email"]
input[type="phone"]
	display inline-block
	width auto
	margin-bottom 10px
	padding 17px 20px 17px 20px
	background #fff
	border 2px solid #29272e
	anim()
	//&:hover
	&:focus
		border-color color-link
	//&.error
	//&.valid
	&.full
		width 100%
	&.half
		width 50%



// ===============================================
//	#input submit
// ===============================================
input[type="submit"]
	width auto
	padding 15px 20px
	border 2px solid #5e112d
	background none
	cursor pointer
	anim()
	//&:hover
	//&:active



// ===============================================
//	#textarea
// ===============================================
textarea
	width 238px
	max-width 100%
	height 235px
	margin-bottom 10px
	padding 20px
	background none
	padding 17px 20px 17px 20px
	background #fff
	border 2px solid #29272e
	resize none
	anim()
	//&:hover
	&:focus
		border-color color-link
		
textarea.full
	width 100%



