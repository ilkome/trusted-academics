mixin popups
	.hide
		.popup.remodal(data-remodal-id="review-write")
			a(href="#" data-remodal-action="close").remodal-close
			h2.popup__name Post review
			form(action="#review-ok")
				div
					input(type="text", placeholder="Name").text-inp
				div
					input(type="text", placeholder="E-mail").text-inp
				div
					textarea(placeholder="Message").text-area
				div.popup__act
					input(type="submit", value="Send review").btn-submit
		
		.popupsm.remodal(data-remodal-id="review-ok")
			a(href="#" data-remodal-action="close").remodal-close
			p Thank you! Your review will be posted within 24 hours.
			a(href="#").btn-ok Ok

		.popup.remodal(data-remodal-id="free-consul")
			a(href="#" data-remodal-action="close").remodal-close
			h2.popup__name 
				span.bg-freecon Get free consultation
			form(action="#free-consul-ok")
				div
					input(type="text", placeholder="Name").text-inp
				div
					input(type="text", placeholder="Number").text-inp
				div
					input(type="text", placeholder="E-mail").text-inp
				div.popup__act
					input(type="submit", value="Send").btn-submit
		
		.popupsm.remodal(data-remodal-id="free-consul-ok")
			a(href="#" data-remodal-action="close").remodal-close
			p Our academic consultant will contact you directly. Thank you!
			a(href="#").btn-ok Ok

